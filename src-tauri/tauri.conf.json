{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "remedia",
	"version": "0.1.0",
	"identifier": "com.heliasar.remedia",
	"build": {
		"beforeDevCommand": "bun run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../dist",
		"removeUnusedCommands": false
	},
	"app": {
		"windows": [
			{
				"label": "main",
				"title": "ReMedia",
				"width": 750,
				"height": 510,
				"dragDropEnabled": false,
				"decorations": true
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
		"externalBin": ["helpers/yt-dlp"],
		"createUpdaterArtifacts": true
	},
	"plugins": {
		"updater": {
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEUyMjg0NzY1MEEzODgwQ0IKUldUTGdEZ0taVWNvNG10dzl0b2RFNVR1UllLWHFlY0U0ZGIzclVFckF2L2FraC8wb1FDbmJSYjAK",
			"endpoints": [
				"https://github.com/becksclair/remedia/releases/latest/download/latest.json"
			]
		}
	}
}
