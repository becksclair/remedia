{
	"name": "remedia",
	"private": true,
	"type": "module",
	"version": "0.1.0",
	"scripts": {
		"build": "tsc && vite build",
		"lint": "oxlint --type-aware --tsconfig tsconfig.json",
		"lint:fix": "oxlint --type-aware --tsconfig tsconfig.json --fix",
		"fmt": "oxfmt src e2e test vite.config.ts vitest.config.ts playwright.config.ts tsconfig.json tsconfig.node.json",
		"dev": "vite",
		"preview": "vite preview",
		"sh-add": "bunx --bun shadcn@latest add",
		"sh-up": "bunx --bun shadcn@latest update",
		"tauri": "tauri",
		"test": "bun test src test",
		"test:coverage": "bun test --coverage",
		"test:watch": "bun test --watch",
		"test:e2e": "bunx playwright test",
		"test:e2e:web": "PW_WEB_ONLY=1 bunx playwright test",
		"test:e2e:headed": "bunx playwright test --headed",
		"test:e2e:report": "bunx playwright show-report",
		"test:e2e:install": "bunx playwright install --with-deps",
		"test:remote": "bun scripts/remote-e2e.ts",
		"test:real-download": "bun scripts/real-download-e2e.ts",
		"test:remote:cargo": "cmd /C \"set CARGO_TARGET_DIR=target-remote&& cargo test --manifest-path src-tauri/Cargo.toml --features remote-e2e --tests\"",
		"wdio": "wdio run ./wdio.conf.ts"
	},
	"dependencies": {
		"@radix-ui/react-alert-dialog": "^1.1.15",
		"@radix-ui/react-checkbox": "^1.3.3",
		"@radix-ui/react-context-menu": "^2.2.16",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-dropdown-menu": "^2.1.16",
		"@radix-ui/react-label": "^2.1.8",
		"@radix-ui/react-progress": "^1.1.8",
		"@radix-ui/react-radio-group": "^1.3.8",
		"@radix-ui/react-select": "^2.2.6",
		"@radix-ui/react-separator": "^1.1.8",
		"@radix-ui/react-slot": "^1.2.4",
		"@radix-ui/react-tabs": "^1.1.13",
		"@radix-ui/react-tooltip": "^1.2.8",
		"@tailwindcss/vite": "^4.1.17",
		"@tanstack/react-table": "^8.21.3",
		"@tanstack/react-virtual": "^3.13.12",
		"@tauri-apps/api": "^2.9.1",
		"@tauri-apps/plugin-clipboard-manager": "^2.3.2",
		"@tauri-apps/plugin-dialog": "^2.4.2",
		"@tauri-apps/plugin-notification": "^2.3.3",
		"@tauri-apps/plugin-opener": "^2.5.2",
		"@tauri-apps/plugin-updater": "^2.9.0",
		"@wdio/cli": "^9.21.0",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"jotai": "^2.15.1",
		"lucide-react": "^0.555.0",
		"next-themes": "^0.4.6",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"react-player": "^3.4.0",
		"sonner": "^2.0.7",
		"tailwind-merge": "^3.4.0",
